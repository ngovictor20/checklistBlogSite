<% include partials/header %>
<div class="ui main container centeredSpecific">
        <div class="ui segment middle aligned">
                <div class="ui huge header"><%= checklist.title %></div>
                <div class="ui input fluid icon">
                        <input type="text" name="" id="newItemForm">
                        <i class="icon plus"></i>
                </div>
                <div class="ui container segments" id="parent">
                        <% checklist.checklistItem.forEach(function(item){ %>
                        <div class="ui grid segment">
                                <div class="fourteen wide column middle aligned content">
                                        <div class="description fluid">
                                                <% if(!item.complete){ %>
                                                <p class="checklistItem" data-id="<%=item._id%>"><%= item.action %>
                                                </p>
                                                <% }else if(item.complete){ %>
                                                <p class="checklistItem completed" data-id="<%=item._id%>">
                                                        <%= item.action %>
                                                </p>
                                                <% } %>
                                        </div>    
                                </div>
                                <div class="two wide column right aligned content extra">
                                        <i class="x icon delete" data-id="<%=item._id%>"></i>
                                </div>
                        </div>
                        <% }) %>
                </div>          
        </div>
        <button class="ui secondary button">
                <a href="/checklist/">Return to List</a>
        </button>

</div>
<% include partials/footer %>