<%- include ../partials/header %>
    <div class="ui main container">
        <div class="ui header">
                New Checklist
        </div>
        <div class="ui raised very padded text segment">
                <form class="ui form" action="/checklist/<%=checklist._id%>?_method=PUT" method="POST">
                        <div class="field">
                                <label>Title</label>
                                <input type="text" name="checklist[title]" placeholder="Title" value="<%= checklist.title %>" required>
                        </div>
                        <% var count = 1 %>
                        <% checklist.checklistItem.forEach(function(item){ %>
                            
                            <div class="field">
                                    <label>Item <%= count %></label>
                                    <input type="text" name="item[]" placeholder="Item 1" value="<%=item.action%>"required>
                                    <br>
                            </div>
                            <% count = count + 1; %>
                           
                        <% }) %>
                        
                        <button class="ui button" type="submit">
                                EDIT
                        </button>
                </form>
        </div>

    </div>

<%- include ../partials/footer %>